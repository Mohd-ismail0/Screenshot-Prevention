{
    "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}